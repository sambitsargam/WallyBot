# Environment Variables - PRODUCTION
NODE_ENV=production
PORT=3000

# Twilio Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Nodit API Configuration
NODIT_API_KEY=your_nodit_api_key
NODIT_BASE_URL=https://web3.nodit.io/v1

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key

# Webhook Configuration
WEBHOOK_URL=https://your-production-domain.com/webhook

# Supported Chains
SUPPORTED_CHAINS=ethereum,polygon

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
TWILIO_WEBHOOK_SIGNATURE_VERIFICATION=true
LOG_LEVEL=info

# Performance
REQUEST_TIMEOUT_MS=30000
API_RETRY_ATTEMPTS=3
CACHE_TTL_SECONDS=300

# Database (if needed for future features)
# DATABASE_URL=postgresql://user:password@host:port/database

# Redis (if needed for caching)
# REDIS_URL=redis://host:port
